# ===========================================
# Environment Configuration for Learning Bot
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# Database Settings
# -----------------
DATABASE_URL=sqlite:///./learning_bot.db

# -----------------
# JWT Authentication
# -----------------
# Generate a secret key using: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------
# LLM API Settings
# -----------------
# We use Mistral API (free tier available)
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_MODEL=mistral-small-2506

# -----------------
# RAG Settings
# -----------------
# Embedding model for document vectorization
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Maximum tokens for context
MAX_CONTEXT_TOKENS=2000

# Number of document chunks to retrieve
TOP_K_RESULTS=3

# -----------------
# Voice Settings
# -----------------
# For speech-to-text (using browser's Web Speech API on frontend)
# No additional API key needed for basic voice functionality

# -----------------
# CORS Settings
# -----------------
FRONTEND_URL=http://localhost:5173

# -----------------
# File Upload Settings
# -----------------
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,epub
UPLOAD_DIR=uploads
